@model IEnumerable<KinderGarten.Models.OvlastenaOsoba>

@{
    ViewData["Title"] = "PrikazOvlastenihOsoba";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <a href="#" ajax-poziv="da" ajax-url="/OvlastenaOsoba/DodajOvlastenaOsoba" ajax-rezultat="dodajGradModalBody" ajax-modal="smallmodalDodaj" class="btn btn-secondary m-b-10" style="background-color:#333"><i class="fa fa-plus m-r-10"></i>Dodaj</a>

            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table-primary m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>Ime i prezime</th>
                                    <th>Broj telefona</th>
                                    <th>Izbriši</th>
                                    <th>Detalji</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ovlastenaOsoba in Model)
                                {
                                    <tr>
                                        <td>@ovlastenaOsoba.Ime @ovlastenaOsoba.Prezime</td>
                                        <td>@ovlastenaOsoba.BrojTelefona</td>
                                        <td><a href="/OvlastenaOsoba/ObrisiOvlastenaOsoba?OvlastenaOsobaID=@ovlastenaOsoba.ID"><i class="fa fa-trash"></i></a></td>
                                        <td><a href="/OvlastenaOsoba/Detalji?OvlastenaOsobaID=@ovlastenaOsoba.ID"><i class="fa fa-info"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- modal medium -->
<div class="modal fade" id="smallmodalDodaj" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="smallmodalLabel">Dodaj ovlaštenu osobu</h5>
            </div>
            <div class="modal-body" id="dodajGradModalBody">

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="smallmodalDetalji" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="smallmodalLabel">Detalji o ovlaštenoj osobi</h5>
            </div>
            <div class="modal-body" id="urediGradModalBody">

            </div>
        </div>
    </div>
</div>