@{ Layout = null; }

@model KinderGarten.ViewModels.DodajZaposlenikaVM

<div class="card">
    <div class="card-body">
        <form method="post" action="/Zaposlenik/DodajZaposlenika" ajax-request="true" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <label for="zaposenik.Ime">Ime</label>
            <input asp-for="Ime" class="form-control">

            <label for="zaposenik.Prezime">Prezime</label>
            <input asp-for="Prezime" class="form-control">

            <label for="zaposenik.JMBG">JMBG</label>
            <input asp-for="JMBG" class="form-control">

            <label for="zaposenik.DatumRodjenja">Datum rođenja</label>
            <input type="date" asp-for="DatumRodjenja" class="form-control">

            <label for="zaposenik.Adresa">Adresa</label>
            <input asp-for="Adresa" class="form-control">

            <label for="zaposenik.BrojTelefona">Broj telefona</label>
            <input asp-for="BrojTelefona" class="form-control">

            <label for="zaposenik.Email">Email</label>
            <input asp-for="Email" class="form-control">

            <label for="zaposenik.StrucnaSpremaID">Stručna sprema</label>
            <select asp-for="StrucnaSpremaID" asp-items="@Model.StrucnaSprema" class="form-control"></select>

            <label for="zaposenik.ZanimanjeID">Zanimanje</label>
            <select asp-for="ZanimanjeID" asp-items="@Model.Zanimanje" class="form-control"></select>

            <label for="slika">Slika</label>
            <input type="file" name="slika" class="form-control">

            <div style="display:flex;justify-content:flex-end;" class="m-t-10">
                <button type="button" class="btn btn-secondary m-r-10" data-dismiss="modal">Odbaci</button>
                <button type="submit" id="DodajGrad" class="btn btn-primary">Sačuvaj</button>
            </div>
        </form>
    </div>
</div>

