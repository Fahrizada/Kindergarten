@{ Layout = null; }

@model KinderGarten.ViewModels.DodajZaposlenikaSeminarVM

<div class="card">
    <div class="card-body">
        <form method="post" action="/Seminar/DodajZaposlenika?SeminarID=@Model.SeminarID" ajax-request="true">
            @Html.AntiForgeryToken()
            <div class="form-group row">
                <div class="col-sm-6">
                    @Html.ListBoxFor(model => model.DodavanjaIDs, new MultiSelectList(Model.Zaposlenici, "Value", "Text"), new { @class = "form-control", multiple = "multiple", id = "Djeca_dropdown" })
                </div>
            </div>
            <div style="display:flex;justify-content:flex-end;" class="m-t-10">
                <button type="button" class="btn btn-secondary m-r-10" data-dismiss="modal">Odbaci</button>
                <button type="submit" id="DodajGrad" class="btn btn-primary">Sačuvaj</button>
            </div>
        </form>
    </div>
    @section Scripts{
        <script>
            $(document).ready(function () {
                $('#Zaposlenici_dropdown').multiselect();
            });
        </script>
    }
</div>
