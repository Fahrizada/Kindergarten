@model IEnumerable<KinderGarten.Models.Grad>

@{
    ViewData["Title"] = "PrikazGradova";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <a href="#" ajax-poziv="da" ajax-url="/Grad/DodajGrad" ajax-rezultat="dodajGradModalBody" ajax-modal="smallmodal" class="btn btn-secondary m-b-10" style="background-color:#333"><i class="fa fa-plus m-r-10"></i>Dodaj</a>
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table-primary m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>Naziv</th>
                                    <th>Poštanski broj</th>
                                    <th>Država</th>
                                    <th>Izbriši</th>
                                    <th>Izmijeni</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var grad in Model)
                                {
                                <tr>
                                    <td>@grad.Naziv</td>
                                    <td>@grad.PostanskiBroj</td>
                                    <td>@grad.Drzava.Naziv</td>
                                    <td><a href="/Grad/Obrisi?GradID=@grad.ID"><i class="fa fa-trash"></i></a></td>
                                    <td><a href="#" ajax-poziv="da" ajax-url="/Grad/Izmijeni?GradID=@grad.ID" 
                                           ajax-rezultat="izmijeniGradModalBody" ajax-modal="smallmodalIzmijeni">
                                        <i class="fa fa-edit"></i></a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<!-- modal medium -->
<div class="modal fade" id="smallmodal" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="smallmodalLabel">Dodaj grad</h5>
            </div>
            <div class="modal-body" id="dodajGradModalBody">
                
            </div>
        </div>
    </div>
</div>
<!-- end modal medium -->
<div class="modal fade" id="smallmodalIzmijeni" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="smallmodalLabel">Izmijeni grad</h5>
            </div>
            <div class="modal-body" id="izmijeniGradModalBody">

            </div>
        </div>
    </div>
</div>