@model List<KinderGarten.Models.RadniList>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <a href="#" ajax-poziv="da" ajax-url="/RadniList/AddRadniList" ajax-rezultat="dodajGradModalBody" ajax-modal="smallmodal" class="btn btn-secondary m-b-10" style="background-color:#333"><i class="fa fa-plus m-r-10"></i>Dodaj</a>
            <div class="row">
                <div class="col-lg-12">
                    <div class="table-responsive table-primary m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>Datum</th>
                                    <th>Grupa</th>
                                    <th>Zaposlenik</th>
                                    <th>Detalji</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Datum.ToShortDateString()</td>
                                        <td>@item.Grupa.Naziv</td>
                                        <td>@item.ZaposlenikPrvaSmjena.Ime @item.ZaposlenikPrvaSmjena.Prezime</td>
                                        <td><a href="/RadniList/DetaljiRadniList?RadniListID=@item.ID"><i class="fa fa-edit"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- modal medium -->
<div class="modal fade" id="smallmodal" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="smallmodalLabel">Dodaj radni list</h5>
            </div>
            <div class="modal-body" id="dodajGradModalBody">

            </div>
        </div>
    </div>
</div>
<!-- end modal medium -->
<div class="modal fade" id="Izmijenismallmodal" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="smallmodalLabel">Izmijeni državu</h5>
            </div>
            <div class="modal-body" id="izmijeniGradModalBody">

            </div>
        </div>
    </div>
</div>