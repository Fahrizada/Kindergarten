    <body class="animsition">
        <div class="page-wrapper">
            <div class="page-content--bge5">
                <div class="container">
                    <div class="login-wrap">
                        <div class="login-content">
                            <div class="login-logo">
                                <a href="#">
                                    <img src="~/Slike/logo1.png" alt="CoolAdmin">
                                </a>
                            </div>
                            <div class="login-form">
                                <form id="account" method="post">
                                    <hr />
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group">
                                        <label asp-for="Input.Email"></label>
                                        <input asp-for="Input.Email" class="form-control" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Input.Password"></label>
                                        <input asp-for="Input.Password" class="form-control" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="login-checkbox">
                                        <div class="checkbox">
                                            <label asp-for="Input.RememberMe">
                                                Zapamti me
                                                <input asp-for="Input.RememberMe" />
                                            </label>
                                        </div>

                                        <label>
                                            <a id="forgot-password" asp-page="./ForgotPassword">Zaboravljena Lozinka?</a>
                                        </label>

                                    </div>
                                    <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Prijavi se</button>
                                </form>
                                @*<input value="Prijavi se" class="au-btn au-btn--block au-btn--green m-b-20" type="submit" />*@

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

