            .login-wrap {
                padding: 0;
                padding-top: 5%;
                padding-bottom: 5%;
            }

            .container {
                max-width: 400px;
            }

            .login-content {
                padding: 30px 30px 5px;
            }

            .page-wrapper {
                padding-bottom: 0;
            }
        </style>
